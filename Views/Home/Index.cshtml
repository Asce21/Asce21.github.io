        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>

    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Ashton's Images/pic_Ashton_01.jpg" alt="Picture of me" style="width: 300px; height: 400px;" class="center-block" />
        </div>

        <div class="item">
            <img src="~/Content/Ashton's Images/pic_Ashton_02.jpg" alt="Picture of me" style="width: 300px; height: 400px;" class="center-block" />
        </div>
    </div>


</div>

